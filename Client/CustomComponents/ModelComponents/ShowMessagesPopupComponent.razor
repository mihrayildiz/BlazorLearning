@inherits BaseModalComponent

<div class="card-body">
    <p>@Message</p>   @*message yazdırıldı.*@
</div>

<div class="row justify-content-center">

    <div class="d-flex">
        <div class="ml-auto p-2">
            <button class="btn btn-light" @onclick="@ConfirmClicked">@OkText</button>  @*butona basıldığında ConfirmClicked metodu çalşssın. ve ok metini yayınlansın.*@
        </div>
    </div>

</div>

@code {

    public async override Task SetParametersAsync(ParameterView parameters)  //component dışarıdan parametre aldığı anda burada ki Message ve OkText parametreleri setlenr.
    {
        Message = parameters.GetValueOrDefault<String>("Message", "Mesaj Yok"); //parameters ile gelen değer(string bir değer) tutuldu.
        OkText = parameters.GetValueOrDefault<String>("OkText", "OK");

        await base.SetParametersAsync(parameters);
    }
}
